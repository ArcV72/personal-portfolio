

<MudDialog TitleClass="dialog-title" ClassContent="dialog-content">
    <TitleContent>
        <h2>@Title</h2>
    </TitleContent>
    <DialogContent>
        <h3>What is it?</h3>
        <p>@Content</p>
        <br />
        <h3>Related Projects</h3>
        <ul>
        @foreach(var project in Projects)
        {
            <li>
                    <strong>@project.projectName : </strong>@project.relation
            </li>
        }
        </ul>

    </DialogContent>
        
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Content { get; set; }
    [Parameter]
    public List<ProjectRelation> Projects { get; set; }

    public class ProjectRelation
    {
        public string projectName;
        public string relation;
    }

    
}

<style>
    .dialog-content{
        text-align: justify;
        margin: 5%;
    }
    .dialog-title {
        background: beige;
    }
</style>

