<div class="card @cardClass">
    <div class="card-header" style="    height: 3em;">

        <strong><h4 class="card-title">@title</h4></strong>
    </div>
    <div class="card-img-top" style="    width: 100%;
    height: 10em;">
        <img src="@imagePath" alt="..." style="width:100%;">
    </div>
    <div class="card-body">

        <p>@description</p>

    </div>
    <div class="card-footer text-body-secondary">
        <div>
            @if (sources != null)
            {
                <a href="@sources">
                    <button>
                        <span class="material-symbols-outlined">
                            code
                        </span>
                        Sources
                    </button>
                </a>
            }
            @if (demo != null)
            {
                <a href="@demo">
                    <button>
                    <span class="material-symbols-outlined">
                        play_arrow
                    </span>
                        Demo
                    </button>
                </a>
            }
        </div>
    </div>

</div>
@code {
    [Parameter] public string? imagePath { get; set; }
    [Parameter] public string? title { get; set; }
    [Parameter] public string? description { get; set; }
    [Parameter] public string? sources { get; set; }
    [Parameter] public string? demo { get; set; }
    [Parameter] public string? cardClass { get; set; }


    public class CardClass
    {
        public const string UNIV = "card-games";
        public const string WORK = "card-animes";
    }


}
<style>
    .card-img-top{
        height: 25%;
        overflow: hidden;
    }

    .card-body{
        height: 10em;
        overflow: auto;
    }

    .card {
        width: 25rem;
    }
</style>

